<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ day splash: white background, no icon -->
    <style name="LaunchThemeDay" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
    </style>

    <!-- Android 12+ night splash: black background, no icon -->
    <style name="LaunchThemeNight" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/black</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
    </style>

    <!-- Default launch theme, overridden in MainActivity by current time -->
    <style name="LaunchTheme" parent="LaunchThemeDay" />

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
